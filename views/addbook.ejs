<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Books App</title>
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Sriracha|Ubuntu" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <header>
    <nav>
      <div class="logo"><i class="fas fa-book"></i> BookApp</div>
    </nav>
  </header>

  <div class="container">

    <div class="section-1">
      <h3>Add a Book</h3>

      <form action="/addbook" method="POST">

          <div class="row">
            <div class="input-field col s12">
              <input name="title" type="text" class="validate" placeholder="Title">
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input name="imgurl" type="text" class="validate" placeholder="Image URL">
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input name="description" type="text" class="validate" placeholder="Description">
            </div>
          </div>

          <div class="row">
            <div class="col s12">
              <select class="browser-default">
                <% for (let i = 0; i < author_array.length; i++) { %>
                <option value="<%= author_array[i].id %>"><%= author_array[i].name %></option>
                <% } %>
              </select>
            </div>
          </div>

          <button type="submit" class="add-book btn">Submit</button>

    </form>
    <br />
    <a href="/newauthor"><button class="add-book btn">Add a New Author</button></a>
  </div>
  </div>
  <!--end section-1-->

  </div>
  <!--end container-->
  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</body>

</html>
